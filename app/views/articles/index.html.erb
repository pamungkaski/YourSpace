<h1> MY BLOG </h1>

<table>
  <% i = 0 %>
  <% @articles.each do |article| %>
  	<% i +=1 %>
    <tr>
      <td><%=article.title%></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article),
      		   method: :delete,
      		   data: { confrim: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table> 

<%= button_to 'Create new article', new_article_path, :class => "btn btn-primary btn-lg", :method => :get %>